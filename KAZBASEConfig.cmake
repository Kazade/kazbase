FIND_PATH( KAZBASE_INCLUDE_DIRS kazbase/logging.h /usr/include /usr/local/include $ENV{INCLUDE} )
FIND_LIBRARY( KAZBASE_LIBRARIES NAMES kazbase PATHS /usr/lib /usr/local/lib )

IF(KAZBASE_INCLUDE_DIRS)
        MESSAGE(STATUS "Found KazBase include dir: ${KAZBASE_INCLUDE_DIRS}")
ELSE(KAZBASE_INCLUDE_DIRS)
        MESSAGE(STATUS "Could NOT find KazBase headers.")
ENDIF(KAZBASE_INCLUDE_DIRS)

IF(KAZBASE_LIBRARIES)
        MESSAGE(STATUS "Found KazBase library: ${KAZBASE_LIBRARIES}")
ELSE(KAZBASE_LIBRARIES)
        MESSAGE(STATUS "Could NOT find KazBase library.")
ENDIF(KAZBASE_LIBRARIES)

IF(KAZBASE_INCLUDE_DIRS AND KAZBASE_LIBRARIES)
        SET(KAZBASE_FOUND "YES")
ELSE(KAZBASE_INCLUDE_DIRS AND KAZBASE_LIBRARIES)
        SET(KAZBASE_FOUND "NO")
        IF(KAZBASE_FIND_REQUIRED)
                MESSAGE(FATAL_ERROR "Could not find KazBase. Please install KazBase (http://github.com/kazade/kazbase)")
        ENDIF(KAZBASE_FIND_REQUIRED)
ENDIF(KAZBASE_INCLUDE_DIRS AND KAZBASE_LIBRARIES)
